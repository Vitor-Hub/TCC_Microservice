{
  "id": null,
  "uid": "tcc-comparacao",
  "title": "K6 Load Test - Microsserviços (Gateway)",
  "tags": ["k6", "performance", "tcc"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "Requests por segundo",
      "targets": [
        {
          "expr": "rate(http_requests_total{app=\"gateway\"}[1m])",
          "legendFormat": "gateway"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Latência (ms) - P95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_req_duration_bucket{app=\"gateway\"}[1m])) by (le))",
          "legendFormat": "gateway"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Erros (%)",
      "targets": [
        {
          "expr": "rate(http_req_failed{app=\"gateway\"}[1m]) * 100",
          "legendFormat": "gateway"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Throughput (req/min)",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{app=\"gateway\"}[1m])) * 60",
          "legendFormat": "gateway"
        }
      ]
    }
  ]
}
