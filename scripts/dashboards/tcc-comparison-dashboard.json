{
  "dashboard": {
    "title": "TCC - Microsserviços vs Monolito",
    "tags": ["tcc", "comparison"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Throughput: Microsserviços vs Monolito",
        "type": "graph",
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"apps\"}[1m]))",
            "legendFormat": "Microsserviços (Total)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"monolito\"}[1m]))",
            "legendFormat": "Monolito",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Latência P95: Comparação",
        "type": "graph",
        "gridPos": { "h": 10, "w": 12, "x": 0, "y": 10 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"apps\"}[1m])) by (le))",
            "legendFormat": "Microsserviços",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"monolito\"}[1m])) by (le))",
            "legendFormat": "Monolito",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "Latency P95" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "title": "Uso Total de CPU",
        "type": "graph",
        "gridPos": { "h": 10, "w": 12, "x": 12, "y": 10 },
        "targets": [
          {
            "expr": "sum(rate(process_cpu_seconds_total{job=\"apps\"}[1m])) * 100",
            "legendFormat": "Microsserviços (Total)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(process_cpu_seconds_total{job=\"monolito\"}[1m])) * 100",
            "legendFormat": "Monolito",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "CPU %" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Uso Total de Memória",
        "type": "graph",
        "gridPos": { "h": 10, "w": 12, "x": 0, "y": 20 },
        "targets": [
          {
            "expr": "sum(jvm_memory_used_bytes{job=\"apps\",area=\"heap\"}) / 1024 / 1024",
            "legendFormat": "Microsserviços (Total)",
            "refId": "A"
          },
          {
            "expr": "sum(jvm_memory_used_bytes{job=\"monolito\",area=\"heap\"}) / 1024 / 1024",
            "legendFormat": "Monolito",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "mbytes", "label": "Memory (MB)" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "title": "Taxa de Erro (%)",
        "type": "graph",
        "gridPos": { "h": 10, "w": 12, "x": 12, "y": 20 },
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"apps\",status=~\"5..\"}[1m])) / sum(rate(http_server_requests_seconds_count{job=\"apps\"}[1m])) * 100",
            "legendFormat": "Microsserviços",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"monolito\",status=~\"5..\"}[1m])) / sum(rate(http_server_requests_seconds_count{job=\"monolito\"}[1m])) * 100",
            "legendFormat": "Monolito",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "Error Rate" },
          { "format": "short" }
        ]
      }
    ],
    "refresh": "5s",
    "time": { "from": "now-30m", "to": "now" }
  }
}