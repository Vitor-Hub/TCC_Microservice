{
  "dashboard": {
    "title": "TCC - MySQL Performance",
    "tags": ["tcc", "mysql"],
    "panels": [
      {
        "id": 1,
        "title": "Queries por Segundo",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(mysql_global_status_queries[1m])",
            "legendFormat": "Queries/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Conexões Ativas",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected",
            "legendFormat": "Conexões",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Slow Queries",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(mysql_global_status_slow_queries[1m])",
            "legendFormat": "Slow Queries/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "InnoDB Buffer Pool Usage (%)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "(mysql_global_status_innodb_buffer_pool_pages_data / mysql_global_variables_innodb_buffer_pool_size) * 100",
            "legendFormat": "Usage %",
            "refId": "A"
          }
        ]
      }
    ],
    "refresh": "5s",
    "time": { "from": "now-15m", "to": "now" }
  }
}