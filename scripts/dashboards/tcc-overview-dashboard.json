{
  "dashboard": {
    "title": "TCC - Performance Overview",
    "tags": ["tcc", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Requisições por Segundo (Throughput)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"apps\"}[1m])) by (app)",
            "legendFormat": "{{app}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Latência P95 por Microsserviço",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"apps\"}[1m])) by (app, le))",
            "legendFormat": "{{app}} - P95",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "Latency" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "title": "Taxa de Erro (%)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=\"apps\",status=~\"5..\"}[1m])) by (app) / sum(rate(http_server_requests_seconds_count{job=\"apps\"}[1m])) by (app) * 100",
            "legendFormat": "{{app}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "Error Rate" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Uso de CPU (%)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"apps\"}[1m]) * 100",
            "legendFormat": "{{app}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "CPU Usage" },
          { "format": "short", "max": 100 }
        ]
      },
      {
        "id": 5,
        "title": "Uso de Memória Heap (MB)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=\"apps\",area=\"heap\"} / 1024 / 1024",
            "legendFormat": "{{app}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "mbytes", "label": "Memory (MB)" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "title": "Threads Ativas (JVM)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "jvm_threads_live_threads{job=\"apps\"}",
            "legendFormat": "{{app}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Threads" },
          { "format": "short" }
        ]
      }
    ],
    "refresh": "5s",
    "time": { "from": "now-15m", "to": "now" }
  }
}